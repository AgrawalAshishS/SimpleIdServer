<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<IsPackable>false</IsPackable>
		<PreserveCompilationContext>true</PreserveCompilationContext>
		<ProduceReferenceAssembly>false</ProduceReferenceAssembly>
	</PropertyGroup>
	<ItemGroup>
	  <SpecFlowObsoleteCodeBehindFiles Remove="Features\AuthorizationCodeGrantTypeErrors - Copier.feature.cs" />
	  <SpecFlowObsoleteCodeBehindFiles Remove="Features\Jwks - Copier.feature.cs" />
	  <SpecFlowObsoleteCodeBehindFiles Remove="Features\PasswordGrantTypeErrors - Copier.feature.cs" />
	  <SpecFlowObsoleteCodeBehindFiles Remove="Features\Token - Copier.feature.cs" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.4.0" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="7.0.0" />
		<PackageReference Include="BlushingPenguin.JsonPath" Version="1.0.6" />
		<PackageReference Include="SpecFlow" Version="3.9.74" />
		<PackageReference Include="SpecFlow.Tools.MsBuild.Generation" Version="3.9.74" />
		<PackageReference Include="SpecFlow.xUnit" Version="3.9.74" />
		<PackageReference Include="xunit" Version="2.4.2" />
		<PackageReference Include="xunit.runner.visualstudio" Version="2.4.5">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Moq" Version="4.18.3" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\..\src\OAuth\SimpleIdServer.OAuth\SimpleIdServer.OAuth.csproj" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Update="Features\ClientCredentialsGrantTypeErrors.feature.cs">
	    <DependentUpon>ClientCredentialsGrantTypeErrors.feature</DependentUpon>
	  </Compile>
	  <Compile Update="Features\AuthorizationCodeGrantTypeErrors.feature.cs">
	    <DependentUpon>AuthorizationCodeGrantTypeErrors.feature</DependentUpon>
	  </Compile>
	  <Compile Update="Features\TokenErrors.feature.cs">
	    <DependentUpon>TokenErrors.feature</DependentUpon>
	  </Compile>
	  <Compile Update="Features\PasswordGrantTypeErrors.feature.cs">
	    <DependentUpon>PasswordGrantTypeErrors.feature</DependentUpon>
	  </Compile>
	  <Compile Update="Features\Token.feature.cs">
	    <DependentUpon>Token.feature</DependentUpon>
	  </Compile>
	</ItemGroup>
	<ItemGroup>
	  <SpecFlowFeatureFiles Update="Features\ClientCredentialsGrantTypeErrors.feature">
	    <Visible>$(UsingMicrosoftNETSdk)</Visible>
	    <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
	  </SpecFlowFeatureFiles>
	  <SpecFlowFeatureFiles Update="Features\AuthorizationCodeGrantTypeErrors.feature">
	    <Visible>$(UsingMicrosoftNETSdk)</Visible>
	    <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
	  </SpecFlowFeatureFiles>
	  <SpecFlowFeatureFiles Update="Features\TokenErrors.feature">
	    <Visible>$(UsingMicrosoftNETSdk)</Visible>
	    <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
	  </SpecFlowFeatureFiles>
	  <SpecFlowFeatureFiles Update="Features\PasswordGrantTypeErrors.feature">
	    <Visible>$(UsingMicrosoftNETSdk)</Visible>
	    <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
	  </SpecFlowFeatureFiles>
	  <SpecFlowFeatureFiles Update="Features\Token.feature">
	    <Visible>$(UsingMicrosoftNETSdk)</Visible>
	    <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
	  </SpecFlowFeatureFiles>
	</ItemGroup>
</Project>
