<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleIdServer.MobileApp.Views.HomePage"
             BackgroundColor="#0c2937">
    <ContentPage.Content>
        <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <!-- Display image -->
            <StackLayout  AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional">
                <Image Source="SIDLogo.png" VerticalOptions="Center"  HeightRequest="140" />
                <Label Text="SimpleIdServer" TextColor="White" Font="Bold,30" />
            </StackLayout>
            <Button Text="Authenticate" Command="{Binding LoginCommand}" AbsoluteLayout.LayoutBounds="0.5,0.9,200,-1" TextColor="White" BackgroundColor="#00b0dc" AbsoluteLayout.LayoutFlags="PositionProportional"></Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>